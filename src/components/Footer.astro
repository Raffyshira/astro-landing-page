      <div class="flex justify-between items-center gap-3 w-fit">
        <a href="#!"><Facebook className="size-5" fill="#000" strokeWidth={0}  /></a>
        <a href="#!"><Linkedin className="size-5" fill="#000" strokeWidth={0} /></a>
